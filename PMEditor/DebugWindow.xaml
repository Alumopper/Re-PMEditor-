<Window x:Class="PMEditor.DebugWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PMEditor"
        mc:Ignorable="d"
        Title="DebugWindow" Height="450" Width="800">
    <Grid Background="#FF0B0314">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <ListBox Name="logListBox" Grid.Column="0"/>
        <StackPanel Grid.Column="1" Margin="10" Name="Panel"/>
        <StackPanel Grid.Column="2">
            <Button Click="ButtonBase_OnClick">清除日志</Button>
        </StackPanel>
    </Grid>
</Window>
