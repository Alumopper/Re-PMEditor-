<Page x:Class="PMEditor.Pages.TrackPreview2D"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PMEditor.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="TrackPreview2D">

    <Grid>
        <Border BorderBrush="#FF61207B" Grid.Row="2" Grid.Column="1" BorderThickness="1,1,1,1" Margin="100,50,100,80">
            <Canvas x:Name="previewPanel" Background="Black">
                <Line Stroke="LightYellow" StrokeThickness="2" 
                      X1="0" X2="{Binding ElementName=previewPanel, Path=ActualWidth}" Y1="{Binding ElementName=previewPanel, Path=ActualHeight}" Y2="{Binding ElementName=previewPanel, Path=ActualHeight}"
                      Margin="0,-50,0,0"/>
            </Canvas>
        </Border>
        <Slider x:Name="progressSlider" ValueChanged="progressSlider_ValueChanged"
            Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Bottom"
            Width="{Binding ElementName=previewPanel, Path=ActualWidth}"
            Margin="0,0,0,50"/>
    </Grid>
</Page>
